@model RegisterViewModel
@{
    ViewData["Title"] = "Registro";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 120px);">
    <div class="login-single-container">
        <div class="text-center mb-5">
            <h2 class="text-white">Crear cuenta</h2>
            <p class="text-white-50">Completá el formulario para registrarte</p>
        </div>

        <form asp-action="Register" asp-controller="Auth" method="post" class="register-form" autocomplete="off">
            <div class="form-group mb-4 position-relative">
                <div class="input-group">
                    <span class="input-group-text bg-transparent border-end-0"><i class="fas fa-user text-white-50"></i></span>
                    <input asp-for="Username" class="form-control login-input" placeholder="Nombre de usuario" autocomplete="new-username" />
                </div>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group mb-4 position-relative">
                <div class="input-group">
                    <span class="input-group-text bg-transparent border-end-0"><i class="fas fa-key text-white-50"></i></span>
                    <input asp-for="Password" type="password" class="form-control login-input" placeholder="Contraseña" id="registerPassword" autocomplete="new-password" />
                    <span class="input-group-text bg-transparent border-start-0 toggle-password" style="cursor: pointer;"><i class="fas fa-eye-slash text-white-50" id="toggleRegisterPassword"></i></span>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <button type="submit" class="btn-login w-100 py-2">Registrarse</button>
            </div>

            <div class="text-center">
                <p class="text-white-50">¿Ya tienes una cuenta? <a asp-action="Login" class="text-white">Inicia sesión</a></p>
            </div>
        </form>
    </div>
</div>
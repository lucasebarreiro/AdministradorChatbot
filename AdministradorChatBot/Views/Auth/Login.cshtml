@model RegisterViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center" style="height: calc(100vh - [altura_header]px - [altura_footer]px);">
    <div class="login-container">
        <div class="row g-0">
            <div class="col-md-4 login-left">
                <div class="d-flex flex-column justify-content-center align-items-center h-100 p-4">
                    <img src="~/img/login-chatbot.png" alt="Chatbot" class="img-fluid mb-4" style="max-height: 200px;">
                    <h3 class="text-white text-center">Bienvenido de vuelta</h3>
                    <p class="text-white-50 text-center">Iniciá sesión para administrar tus chatbots</p>
                </div>
            </div>

            <div class="col-md-8 login-right">
                <div class="h-100 d-flex flex-column justify-content-center p-5">
                    <h2 class="text-center mb-4 text-white">Iniciar sesión</h2>
                    <form asp-action="Login" method="post">
                        <div class="form-group mb-4 position-relative">
                            <div class="input-group">
                                <span class="input-group-text bg-transparent border-end-0"><i class="fas fa-user text-white-50"></i></span>
                                <input asp-for="Username" class="form-control login-input" placeholder="Username" />
                            </div>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4 position-relative">
                            <div class="input-group">
                                <span class="input-group-text bg-transparent border-end-0"><i class="fas fa-key text-white-50"></i></span>
                                <input asp-for="Password" type="password" class="form-control login-input" placeholder="Password" id="passwordInput" />
                                <span class="input-group-text bg-transparent border-start-0 toggle-password" style="cursor: pointer;"><i class="fas fa-eye text-white-50" id="togglePassword"></i></span>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <input type="submit" value="Login" class="btn-login w-100 py-2" />
                        </div>

                        <div class="text-center">
                            <a asp-action="Register" class="text-white-50 me-3">Crear cuenta</a>
                            <a asp-action="ForgotPassword" class="text-white-50">¿Olvidaste tu contraseña?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
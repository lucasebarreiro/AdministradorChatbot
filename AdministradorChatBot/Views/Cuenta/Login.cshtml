@model Usuario

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h1>@ViewData["Title"]</h1>
<p class="lead">Inicia sesión para acceder a tu cuenta.</p>
<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="NombreUsuario"></label>
        <input asp-for="Contraseña" class="form-control" />
        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Contraseña"></label>
        <input asp-for="Contraseña" class="form-control" type="password" />
        <span asp-validation-for="Contraseña" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
    <a asp-action="Register" class="btn btn-secondary">Registrarse</a>
    <a asp-action="ForgotPassword" class="btn btn-link">¿Olvidaste tu contraseña?</a>
</form>

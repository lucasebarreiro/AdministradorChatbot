@model List<Chatbot>
@{
    ViewData["Title"] = "Home Page";
    var userId = Context.Session.GetInt32("Id");
    var username = Context.Session.GetString("Username");
}

    <div class="banner">
        <div class="row align-items-center">
            <div class="col-md-6">
            <h1 class="display-4 mb-4 fw-bold">¡Welcome, <span class="username">@username</span>!</h1>
                <p class="lead mb-4">Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
                <a asp-controller="Home" asp-action="CreateChatbot" class="btn btn-primary btn-lg">Crear chatbot <i class="fas fa-plus-circle ms-2"></i></a>
            </div>

            <div class="col-md-6 text-md-end">
                <img src="~/img/banner-chatbot.png" alt="Chatbot illustration" class="img-banner">
            </div>
        </div>
    </div>

<section class="mis-chatbots container">
    <h2>Mis Chatbots</h2>

    <div class="row">
        @foreach (var bot in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 chatbot-card">
                    <div class="chatbot-card-img">
                        <img src="~/img/chatbot-default.png" alt="@bot.Name" style="width: 100%">
                    </div>

                    <div class="chatbot-card-body">
                        <h5 class="card-title">@bot.Name</h5>
                        <p class="card-text">@bot.Description</p>

                        <div class="btn-group-card">
                            <a asp-action="EditarChatbot" asp-route-id="@bot.Id" class="btn btn-primary"><i class="fas fa-edit"></i> Editar</a>
                            <a asp-action="EliminarChatbot" asp-route-id="@bot.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Eliminar</a>
                            <a asp-action="Chat" asp-route-id="@bot.Id" class="btn btn-success"><i class="fas fa-comment"></i> Chatear</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>